<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_3"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/imageView_song_item"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_file_mp3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_name_song_item"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textView_name_song_item"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/sp_18"
            app:layout_constraintLeft_toRightOf="@+id/imageView_song_item"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/textView_name_artist_item"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/dp_1"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toRightOf="@id/imageView_song_item"
            app:layout_constraintTop_toBottomOf="@+id/textView_name_song_item"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
